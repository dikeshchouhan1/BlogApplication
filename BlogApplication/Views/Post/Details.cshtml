@model SyncoSyntax.Models.Post

@{
    ViewData["Title"] = Model.Title;
}

<style>
    .content-wrapper {
        padding: 20px;
        max-width: 1000px;
        margin: 0 auto;
        font-family: sans-serif;
    }

    .feature-image {
        width: 100%;
        height: 500px;
        object-fit: cover;
        margin-bottom: 20px;
    }
</style>

<div class="text-end">
    <a class="btn btn-secondary my-3"
       asp-controller="Post"
       asp-action="Edit"
       asp-route-id="@Model.Id">
        Edit Post
    </a>

    <a class="btn btn-danger mx-3 my-3"
       asp-controller="Post"
       asp-action="Delete"
       asp-route-id="@Model.Id">
        Delete Post
    </a>
</div>

<div class="content-wrapper">
    <h1>@Model.Title</h1>

    <p>
        <span class="badge bg-primary">By:</span> @Model.Author |
        <span class="badge bg-primary">Published on</span>
        @Model.PublishedDate.ToString("MMMM dd, yyyy")
    </p>

    <p>
        <span class="badge bg-secondary">Category</span>
        @Model.Category?.Name
    </p>

    <img src="@Model.FeatureImagePath"
         alt="@Model.Title"
         class="feature-image" />

    <hr />

    <div>@Html.Raw(Model.Content)</div>

    <hr />

    <!-- ✅ COMMENT SECTION (ALWAYS EXISTS) -->
    <div id="commentSection">
        @if (Model.Comments != null && Model.Comments.Any())
        {
            foreach (var comment in Model.Comments)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@comment.UserName</h5>
                        <p class="card-text">@comment.Content</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p id="noCommentsText" class="text-muted">
                No comments yet. Be the first to comment.
            </p>
        }
    </div>

    <h4>Add a Comment</h4>

    <form id="commentForm">
        <div class="form-group mb-2">
            <label>Name</label>
            <input id="Username" required class="form-control" />
        </div>

        <div class="form-group mb-2">
            <label>Content</label>
            <textarea id="Content" rows="3" required class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-2">
            Submit Comment
        </button>
    </form>
</div>

@section Scripts {
    <script>
        $("#commentForm").submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("AddComment", "Post")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    UserName: $("#Username").val(),
                    Content: $("#Content").val(),
                    PostId: @Model.Id
                }),
                success: function (res) {

                    $("#noCommentsText").remove();
                    $("#commentForm")[0].reset();

                    // ✅ NO template literal conflicts
                    var html =
                        '<div class="card mb-3 shadow-sm">' +
                            '<div class="card-body">' +
                                '<h5 class="card-title">' + res.UserName + '</h5>' +
                                '<p class="card-text">' + res.Content + '</p>' +
                            '</div>' +
                        '</div>';

                    $("#commentSection").append(html);
                },
                error: function () {
                    alert("Failed to add comment");
                }
            });
        });
    </script>
}
